<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="@string/home"
            android:layout_margin="5dp"
            android:id="@+id/header_home_button"
            android:background="@color/mainColor"

    />

    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/infoBackground"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="50dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
                android:id="@+id/suspect_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:foregroundGravity="center"
        />

        <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:weightSum="15"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
        >
            <TextView
                    android:id="@+id/suspect_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Target Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_weight="6"
                    android:padding="5dp"
                    android:textSize="30dp"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="100"
                    android:layout_weight="3"
                    android:orientation="horizontal"
            >
                <View
                        android:id="@+id/score_process"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="75"
                        android:background="@color/scoreProcess"
                />

                <TextView
                        android:id="@+id/score"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:text="75"
                        android:gravity="center"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_margin="5dp"
                    android:weightSum="2"
                    android:layout_gravity="right"
            >
                <Button
                        android:id="@+id/agree_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Agree"
                        android:textSize="10dp"
                        android:background="@color/agreeGreen"
                />

                <Button
                        android:id="@+id/disagree_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Disagree"
                        android:textSize="10dp"
                        android:background="@color/disagreeRed"
                        android:layout_toEndOf="@id/agree_button"
                        android:layout_marginLeft="10dp"
                />

            </LinearLayout>

            <ImageView
                    android:layout_width="34dp"
                    android:layout_height="0dp"
                    android:id="@+id/suspect_color"
                    app:srcCompat="@android:drawable/radiobutton_off_background"
                    android:layout_weight="4"
                    android:tint="@color/helpRed"
                    android:layout_gravity="right"

            />

        </LinearLayout>
    </RelativeLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="30dp"
                  android:layout_below="@+id/header"
                  android:weightSum="2"
                  android:orientation="horizontal"
                  android:id="@+id/tabs"
    >
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:id="@+id/tab_main_info"
                android:background="@color/infoBackground"
                android:text="@string/main_information"
        />

        <Button
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:id="@+id/tab_additional_info"
                android:background="@color/infoDarkGreen"
                android:text="@string/additional_information"
        />

    </LinearLayout>


    <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/tabs"
            android:text="@string/phone_number"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:background="@color/infoNumberYellow"
            android:padding="15dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="20dp"
    />

    <TextView
            android:id="@+id/email_address"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/phone_number"
            android:text="@string/email_address"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:background="@color/infoNumberYellow"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="120dp"
                  android:orientation="horizontal"
                  android:weightSum="3"
                  android:layout_below="@id/email_address"
                  android:layout_marginTop="70dp"
                  android:paddingHorizontal="20dp"
    >
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:weightSum="4"
                      android:orientation="vertical"
                      android:layout_marginHorizontal="10dp"
        >
            <ImageView android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="3"
                       android:src="@android:drawable/sym_def_app_icon"
            />

            <TextView android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:text="Cut"
                      android:textColor="@android:color/black"
                      android:textSize="15dp"
                      android:textAlignment="center"
                      android:background="@color/infoBackground"
            />

        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:weightSum="4"
                      android:orientation="vertical"
                      android:layout_marginHorizontal="10dp"
        >
            <ImageView android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="3"
                       android:src="@android:drawable/sym_def_app_icon"
            />

            <TextView android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:text="Bandage"
                      android:textColor="@android:color/black"
                      android:textSize="15dp"
                      android:textAlignment="center"
                      android:background="@color/infoBackground"
            />

        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:weightSum="4"
                      android:orientation="vertical"
                      android:layout_marginHorizontal="10dp"
        >
            <ImageView android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="3"
                       tools:srcCompat="@tools:sample/avatars[0]"
            />

            <TextView android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:text="Cigar Burns"
                      android:textColor="@android:color/black"
                      android:textSize="15dp"
                      android:textAlignment="center"
                      android:background="@color/infoBackground"

            />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>