<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="@string/back"
            android:layout_margin="5dp"
            android:id="@+id/back_button"
            android:background="@color/mainColor"
    />

    <TextView
            android:id="@+id/report_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/recycler_view"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:text="Name"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:background="@color/mainColor"
    />

    <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/recycler_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:context=".ThumbnailGridFragment"
            android:layout_centerInParent="true"
    />

    <EditText android:layout_width="300dp"
              android:layout_height="100dp"
              android:layout_centerHorizontal="true"
              android:layout_below="@id/recycler_view"
              android:background="@color/infoNumberYellow"
              android:id="@+id/info_body"
              android:text="Some Infos"
              android:layout_margin="2dp"
              android:gravity="top"
              android:textColor="@android:color/darker_gray"
    />

    <Button android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/mainColor"
            android:text="@string/submit"
            android:layout_below="@id/info_body"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
    />



</RelativeLayout>