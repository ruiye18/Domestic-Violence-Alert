<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="@string/back"
            android:layout_margin="5dp"
            android:id="@+id/back_button"
            android:background="@color/mainColor"
    />

    <EditText
            android:id="@+id/report_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/report_image"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:hint="@string/name"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:background="@color/mainColor"
    />

    <ImageView
            android:id="@+id/report_image"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerInParent="true"
    />

    <Button
            android:layout_below="@id/report_image"
            android:id="@+id/add_report_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Add Image"/>

    <EditText android:layout_width="300dp"
              android:layout_height="100dp"
              android:layout_centerHorizontal="true"
              android:layout_below="@id/add_report_image_button"
              android:background="@color/infoNumberYellow"
              android:id="@+id/info_body"
              android:hint="Some Infos"
              android:layout_margin="2dp"
              android:gravity="top"
              android:textColor="@android:color/darker_gray"
    />

    <Button android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/mainColor"
            android:text="@string/submit"
            android:layout_below="@id/info_body"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:id="@+id/submit_button"
    />

    <ToggleButton
            android:layout_above="@+id/report_title"
            android:id="@+id/is_criminal_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Criminal Record"
            android:textOff="No Criminal Record"
    />

    <ToggleButton
            android:layout_above="@+id/report_title"
            android:layout_toRightOf="@+id/is_criminal_toggle"
            android:id="@+id/agree_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Disagree"
            android:textOff="Agree"
    />



</RelativeLayout>