<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="@string/home"
            android:layout_margin="5dp"
            android:id="@+id/home_button"
            android:background="@color/mainColor"

    />

    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/infoBackground"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="50dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
                android:id="@+id/suspect_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:foregroundGravity="center"
        />

        <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:weightSum="15"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
        >
            <TextView
                    android:id="@+id/suspect_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Target Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_weight="6"
                    android:padding="5dp"
                    android:textSize="30dp"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="100"
                    android:layout_weight="3"
                    android:orientation="horizontal"
            >
                <View
                        android:id="@+id/score_process"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="75"
                        android:background="@color/scoreProcess"
                />

                <TextView
                        android:id="@+id/score"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:text="75"
                        android:gravity="center"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_margin="5dp"
                    android:weightSum="2"
                    android:layout_gravity="right"
            >
                <Button
                        android:id="@+id/agree_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Agree"
                        android:textSize="10dp"
                        android:background="@color/agreeGreen"
                />

                <Button
                        android:id="@+id/disagree_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Disagree"
                        android:textSize="10dp"
                        android:background="@color/disagreeRed"
                        android:layout_toEndOf="@id/agree_button"
                        android:layout_marginLeft="10dp"
                />

            </LinearLayout>

            <ImageView
                    android:layout_width="34dp"
                    android:layout_height="0dp"
                    android:id="@+id/suspect_color"
                    app:srcCompat="@android:drawable/radiobutton_off_background"
                    android:layout_weight="4"
                    android:tint="@color/helpRed"
                    android:layout_gravity="right"

            />

        </LinearLayout>
    </RelativeLayout>

